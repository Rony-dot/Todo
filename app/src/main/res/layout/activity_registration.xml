<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCC60B"
    tools:context=".activitys.RegistrationActivity"
    android:layout_gravity="center">

    <TextView
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="40sp"
        android:background="@color/black"
        android:textColor="@color/white"
        android:text="Register Now"
        android:layout_marginBottom="25dp"
        android:layout_above="@+id/layout_mine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
    <LinearLayout
        android:id="@+id/layout_mine"
        android:background="#13D85B"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_first_name"
            android:hint="First name"
            android:textColor="@color/white"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/et_last_name"
            android:layout_marginTop="15dp"
            android:hint="Last name"
            android:textColor="@color/white"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/et_email"
            android:layout_marginTop="15dp"
            android:hint="email"
            android:textColor="@color/white"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/et_username_reg"
            android:layout_marginTop="15dp"
            android:hint="username"
            android:textColor="@color/white"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/et_password_reg"
            android:layout_marginTop="15dp"
            android:hint="password"
            android:inputType="textPassword"
            android:textColor="@color/white"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <Button
        android:id="@+id/sign_in_reg"
        android:layout_below="@+id/layout_mine"
        android:layout_marginTop="15dp"
        android:textColor="#FF0303"
        android:text="Sign in"
        android:textSize="28sp"
        android:textStyle="bold"
        android:background="#051ACA"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>